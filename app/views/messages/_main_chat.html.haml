.chat-main
  .main__header
    .main__header__leftbox
      .leftbox__title
        = @group.name
        .main__header__leftbox__messagepreview
          Member:
          - @group.users.each do |user|
            = user.name
    .main__header-rightbtn
      = link_to edit_group_path(@group) do
        Edit

  .chat-area
    .chat-area__text
      = render @messages
  .messageArea
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'messageArea__textarea', placeholder: " type a message"
      .mask
        = f.label :image, class: 'messageArea__picturelabel' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'messageArea__uploadfile'
      = f.submit 'Send', class: 'messageArea__submitbtn'