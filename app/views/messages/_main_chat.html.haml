.chat-main
  .main__header
    .main__header__leftbox
      .leftbox__title
        = @group.name
        .main__header__leftbox__messagepreview
          - @group.users.each do |user|
            = user.name
    .main__header-rightbtn
      = link_to edit_group_path(@group) do
        Edit

  .chat-area
    .chat-area__username
      username
      .chat-area__created__at
        2019
    .chat-area__text
      = render @messages

  .message
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'message__textarea', placeholder:" type a message"
      .mask
        = f.label :image, class: 'message__picturelabel' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'message__uploadfile'
      = f.submit 'Send', class: 'message__submitbtn'